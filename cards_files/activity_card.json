{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.2",
    "body": [
        {
            "type": "TextBlock",
            "text": "Get All Activities",
            "wrap": true,
            "size": "Large",
            "weight": "Bolder"
        },
        {
            "type": "Input.Text",
            "placeholder": "Please give me a IP",
            "id": "setIP"
        },
        {
            "type": "Input.ChoiceSet",
            "choices": [
                {
                    "title": "All",
                    "value": "all"
                },
                {
                    "title": "Allowed",
                    "value": "allowed"
                },
                {
                    "title": "Blocked",
                    "value": "blocked"
                },
                {
                    "title": "Proxied",
                    "value": "proxied"
                }
            ],
            "placeholder": "Select a category to analyze",
            "id": "setVerdict"
        },
        {
            "type": "ActionSet",
            "actions": [
                {
                    "type": "Action.Submit",
                    "title": "Submit",
                    "style": "positive",
                    "id": "submitButton",
                    "data": {
                        "callback_keyword": "activity"
                    }
                }
            ]
        }
    ]
}