{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.2",
    "body": [
        {
            "type": "TextBlock",
            "text": "Aggiungi un nuovo utente alla stanza",
            "wrap": true,
            "size": "Medium",
            "weight": "Bolder"
        },
        {
            "type": "Input.ChoiceSet",
            "choices": [
                {
                    "title": "Analyst",
                    "value": "analyst"
                },
                {
                    "title": "Developer",
                    "value": "developer"
                },
                {
                    "title": "Specialist",
                    "value": "specialist"
                }
            ],
            "placeholder": "Scegli ruolo",
            "id": "ruoli"
        },
        {
            "type": "ActionSet",
            "actions": [
                {
                    "type": "Action.Submit",
                    "title": "Aggiungi Ruolo",
                    "style": "positive",
                    "data": {
                        "callback_keyword": "aggiungi"
                    }
                }
            ]
        }
    ]
}